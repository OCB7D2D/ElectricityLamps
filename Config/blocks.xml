<configs>

	<!--####################################################################-->
	<!--####################################################################-->

	<!-- START BASE BLOCK TYPES -->
	<append xpath="/blocks">

		<!-- Root Block -->
		<block name="ocbLampMaster">
			<!-- never show this block anywhere -->
			<property name="CreativeMode" value="None"/>
			<!-- use our own implementation from harmony dll -->
			<property name="Class" value="ElectricityLight, ElectricityLamps"/>
			<!-- some basic block options -->
			<property name="TakeDelay" value="5"/>
			<property name="MaxDamage" value="500"/>
			<property name="SellableToTrader" value="true"/>
			<property name="Material" value="Mmetal"/>
			<property name="Group" value="Science"/>
			<property name="SortOrder1" value="70a0"/>
			<property name="FilterTags" value="fdecor,felectrical"/>
			<!-- some other useful options for blocks -->
			<property name="LPHardnessScale" value="2"/>
			<property name="StabilitySupport" value="false"/>
			<property name="ImposterDontBlock" value="true"/>
			<property name="IsTerrainDecoration" value="false"/>
			<property name="Collide" value="melee,bullet,arrow,rocket"/>
			<!-- dont give ourself back -->
			<drop event="Destroy" count="0"/>
			<!-- options as inherited from powered block -->
			<property name="RequiredPower" value="1"/>
			<!-- Switch between color and kelvin mode -->
			<property name="LightMode" value="1"/>
			<!-- light intensity as passed to light LOD -->
			<property name="LightIntensity" value="1.0"/>
			<!-- options for the slider in the UI -->
			<property name="LightMinIntensity" value="0.2"/>
			<property name="LightMaxIntensity" value="8.0"/>
			<property name="LightIntensityStep" value="0.1"/>
			<!-- light range as passed to light LOD -->
			<property name="LightRange" value="15"/>
			<!-- options for the slider in the UI -->
			<property name="LightMinRange" value="0"/>
			<property name="LightMaxRange" value="50"/>
			<property name="LightRangeStep" value="1"/>
			<!-- only useful for spotlights -->
			<property name="LightAngle" value="95"/>
			<!-- options for the slider in the UI -->
			<property name="LightMinAngle" value="35"/>
			<property name="LightMaxAngle" value="135"/>
			<property name="LightAngleStep" value="5"/>
			<!-- this setting ensures that the wrench does the right (visual) action -->
			<drop event="Harvest" name="terrStone" count="0" tag="salvageHarvest" tool_category="Disassemble"/>
			<!-- some base setup for later -->
			<property name="Mesh" value="models"/>
			<!-- the following can't be set on master block -->
			<!-- <property name="Shape" value="ModelEntity" /> -->
			<property name="Stacknumber" value="20"/>
		</block>

		<!-- Illuminated Signs -->
		<block name="ocbSignLampMaster">
			<property name="CreativeMode" value="None"/>
			<property name="Extends" value="ocbLampMaster"/>
			<property name="DescriptionKey" value="ocbSignLampDesc"/>
			<property name="UnlockedBy" value="perkAdvancedEngineering,generatorbankSchematic"/>
			<!-- setup damage and repair options -->
			<property name="Material" value="Mglass"/>
			<property name="MaxDamage" value="300"/>
			<property class="RepairItems">
				<property name="resourceBrokenGlass" value="2"/>
				<property name="resourceForgedIron" value="2"/>
				<property name="resourceElectricParts" value="2"/>
			</property>
			<drop event="Harvest" name="resourceBrokenGlass" count="1,4" tag="allHarvest"/>
			<drop event="Harvest" name="resourceScrapPolymers" count="1,4" tag="salvageHarvest"/>
			<drop event="Harvest" name="resourceElectricParts" count="1,4" tag="salvageHarvest" tool_category="Disassemble"/>
			<drop event="Harvest" name="resourceForgedIron" count="1,4" tag="salvageHarvest" tool_category="Disassemble"/>
			<drop event="Fall" name="scrapMetalPile" prob="0.75" stick_chance="1"/>
			<!-- setup basic light options -->
			<property name="LightIntensity" value="0.8"/>
			<property name="LightMaxIntensity" value="1.8"/>
			<property name="LightRange" value="5"/>
			<property name="LightMaxRange" value="15"/>
			<property name="RequiredPower" value="2"/>
			<!-- economic values -->
			<property name="EconomicValue" value="125"/>
			<property name="Stacknumber" value="10"/>
